@using ShibbolethLogin
@using ShibbolethLogin.Claims
@{
    ViewData["Title"] = "Studenti a zaměstnanci";
}
<h2>@ViewData["Title"]</h2>

<p>Stránka pouze pro přihlášené s rolí student nebo zaměstnanec!</p>

@if (User.Identity.IsAuthenticated)
{
    <div>
        Role:
        @{
            var roles = User.Identity.GetRoles();
            <strong>@(string.Join(", ", roles))</strong>
        }

    </div>
}
